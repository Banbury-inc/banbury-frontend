{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["jest", "node"]
    },
    "include": [
        "*.ts",
        "__tests__/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
} 