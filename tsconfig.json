{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages/frontend/src/renderer/neuranet/**/*.ts",
    "packages/frontend/src/**/**/test/**/*.ts",
    "packages/frontend/src/**/**/test/**/*.tsx",
    "packages/frontend/src/**/*.ts",
    "packages/frontend/src/**/*.tsx",
    "packages/frontend/src/renderer/neuranet/device/**/*.ts",
    "packages/frontend/src/renderer/types/*.d.ts",
    "packages/frontend/declaration.d.ts",
    "packages/frontend/globals.d.ts",
    "packages/frontend/preload.ts",
    "packages/frontend/setupTests.ts",
    "packages/core/src/device/add_downloads_info.ts",
    "packages/core/src/device/add_uploads_info.ts",
    "packages/core/src/files/downloadFile.ts",
    "packages/core/src/device/fetchDeviceData.ts"
, "packages/core/src/device/addDevice.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}