{
    "name": "banbury",
    "private": true,
    "workspaces": [
        "packages/frontend",
        "packages/core",
        "packages/cli",
        "packages/api"
    ],
    "scripts": {
        "dev": "npm run dev --workspace=packages/frontend",
        "dev:all": "concurrently \"npm run dev --workspace=packages/core\" \"npm run dev --workspace=packages/api\" \"npm run dev --workspace=packages/frontend\"",
        "build": "npm run build --workspace=packages/core && npm run build --workspace=packages/api && npm run build --workspace=packages/frontend",
        "test": "npm run test --workspaces",
        "lint": "npm run lint --workspaces",
        "clean": "npm run clean --workspaces"
    },
    "engines": {
        "npm": ">=10.0.0",
        "node": ">=20.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@types/yauzl": "^2.10.3",
        "concurrently": "^8.2.2"
    },
    "dependencies": {
        "@heroicons/react": "^2.2.0",
        "@monaco-editor/react": "^4.7.0",
        "@tensorflow/tfjs": "^4.22.0",
        "@tensorflow/tfjs-node": "^4.22.0",
        "@types/react-syntax-highlighter": "^15.5.13",
        "ace-builds": "^1.41.0",
        "docx-preview": "^0.3.5",
        "monaco-editor": "^0.52.2",
        "ollama": "^0.5.13",
        "pdfjs-dist": "^3.11.174",
        "react-ace": "^14.0.1",
        "react-medium-image-zoom": "^5.2.14",
        "react-pdf": "^7.5.1",
        "react-player": "^2.16.0",
        "react-syntax-highlighter": "^15.6.1",
        "systeminformation": "^5.25.11",
        "ws": "^8.18.1",
        "yauzl": "^3.2.0"
    }
}
